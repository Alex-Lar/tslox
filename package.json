{
	"name": "tslox",
	"version": "0.0.1",
	"description": "Lox language interpreter implemented in TypeScript",
	"main": "./dist/index.js",
	"bin": {
		"tslox": "bin/tslox"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "pnpm run clean:some && tsc -p .",
		"clean:some": "rm -rf ./dist",
		"clean:all": "rm -rf ./node_modules ./pnpm-lock.yaml ./dist",
		"refresh": "pnpm run clean:all && pnpm install"
	},
	"keywords": ["lox", "interpreter", "language"],
	"author": "Alexander Larin",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^22.8.7",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3"
	}
}
